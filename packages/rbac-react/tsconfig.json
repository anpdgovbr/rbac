{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "jsx": "react-jsx",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "nodenext",
    "types": ["react", "node"],
    "typeRoots": ["./node_modules/@types", "../../node_modules/@types"],
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "test/**/*"]
}
