{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "jsx": "react-jsx",
    "lib": ["ES2020", "DOM"],
    "types": ["react", "react/jsx-runtime"],
    "typeRoots": [
      "./node_modules/@types",
      "../../node_modules/@types"
    ],
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
